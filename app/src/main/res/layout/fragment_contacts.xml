<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLiaisonLightGray"
    tools:context=".ContactsFragment">

    <ScrollView
        android:id="@+id/contacts_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/contacts_i_found_him"
                        android:textColor="@color/colorLiaisonGray"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/contacts_item1"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/selector_white_gray"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/contacts_item1_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:src="@drawable/ic_arrow_forward_24dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_toRightOf="@+id/contacts_item1_iv"
                            android:text="@string/contacts_public"
                            android:textColor="@color/colorLiaisonBlack"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/contacts_item1_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/contacts_item1_more_iv"
                            android:layout_marginRight="8dp"
                            android:text="0"
                            android:textColor="@color/colorLiaisonGray"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/contacts_item1_more_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_more_24dp" />
                    </RelativeLayout>

                    <com.hhwit.liaisonshome.MyButtonView
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        app:buttonBackgroundDisabled="@color/colorLiaisonGray"
                        app:buttonBackgroundNormal="@color/colorLiaisonGray"
                        app:buttonBackgroundPressed="@color/colorLiaisonGray" />

                    <RelativeLayout
                        android:id="@+id/contacts_item2"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/selector_white_gray"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/contacts_item2_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:src="@drawable/ic_arrow_forward2_24dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_toRightOf="@+id/contacts_item2_iv"
                            android:text="@string/contacts_private"
                            android:textColor="@color/colorLiaisonBlack"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/contacts_item2_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/contacts_item2_more_iv"
                            android:layout_marginRight="8dp"
                            android:text="0"
                            android:textColor="@color/colorLiaisonGray"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/contacts_item2_more_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_more_24dp" />
                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@drawable/shadow_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/contacts_he_found_me"
                        android:textColor="@color/colorLiaisonGray"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/contacts_item3"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/selector_white_gray"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/contacts_item3_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:src="@drawable/ic_arrow_back_24dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_toRightOf="@+id/contacts_item3_iv"
                            android:text="@string/contacts_public"
                            android:textColor="@color/colorLiaisonBlack"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/contacts_item3_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/contacts_item3_more_iv"
                            android:layout_marginRight="8dp"
                            android:text="0"
                            android:textColor="@color/colorLiaisonGray"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/contacts_item3_more_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_more_24dp" />
                    </RelativeLayout>

                    <com.hhwit.liaisonshome.MyButtonView
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        app:buttonBackgroundDisabled="@color/colorLiaisonGray"
                        app:buttonBackgroundNormal="@color/colorLiaisonGray"
                        app:buttonBackgroundPressed="@color/colorLiaisonGray" />

                    <RelativeLayout
                        android:id="@+id/contacts_item4"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/selector_white_gray"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/contacts_item4_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:src="@drawable/ic_arrow_back2_24dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_toRightOf="@+id/contacts_item4_iv"
                            android:text="@string/contacts_private"
                            android:textColor="@color/colorLiaisonBlack"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/contacts_item4_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/contacts_item4_more_iv"
                            android:layout_marginRight="8dp"
                            android:text="0"
                            android:textColor="@color/colorLiaisonGray"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/contacts_item4_more_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_more_24dp" />
                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@drawable/shadow_gray" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>