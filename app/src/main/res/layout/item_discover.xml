<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:background="@drawable/selector_white_gray"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/item_discover_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:textColor="@color/colorActionBar"
        android:textSize="18sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/item_discover_identity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tv_corner_blank"
        android:textColor="@color/colorActionBar"
        android:textSize="17sp" />

</LinearLayout>